<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

        <!--<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>admin</from-outcome>
			<to-view-id>/admin.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule> -->
      
        
        
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginController.checkValidUser}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/resultforsuccess.xhtml</to-view-id>  <!--TODO User homePage ADMIN OR CUSTOMER-->
		</navigation-case>
		<navigation-case>
			<from-action>#{login.checkValidUser}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/resultforfail.xhtml</to-view-id> <!--TODO FAIL homePage-->
		</navigation-case>
		<navigation-case>
			<from-outcome>newuser</from-outcome>
			<to-view-id>/newCustomerRegistration.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>
        
	
	<navigation-rule>
		<from-view-id>/resultforfail.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>newuser</from-outcome>
			<to-view-id>/newCustomerRegistration.xhtml</to-view-id>
		</navigation-case>
                
		<navigation-case>
			<from-outcome>back</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
        

        
        
	<navigation-rule>
		<from-view-id>/newCustomerRegistration.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>result</from-outcome>
			<to-view-id>/result.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
        
        
	<navigation-rule>
		<from-view-id>/result.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>details</from-outcome>
			<to-view-id>/newCustomerRegistration.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>

